#!/usr/bin/env bash
find ~/media/music-inbox/1-match -type f -exec bash -c 'base=$(basename "$0"); ext="${base##*.}"; [[ ${ext^} == $ext ]] && mv "$0" "$(dirname "$0")/${base%.*}"."${ext,,}"' {} \;
find ~/media/music-inbox/1-match \( -name "*.cue" -o -name "*.db" -o -name "*.jpg" -o -name "*.jpeg" -o -name "*.lrc" -o -name "*.m3u" -o -name "*.m3u8" -o -name "*.md" -o -name "*.nfo" -o -name "*.png" -o -name "*.sfv" -o -name "*.txt" -o -name "*.url" \) -type f -delete 2> >(grep -v "No such file or directory" >&2)
dot_clean -mn ~/media/music-inbox/1-match
find ~/media/music-inbox/1-match -type d -empty -delete
